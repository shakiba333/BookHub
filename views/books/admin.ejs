<%- include('../partials/header') %>
    <div class="mainContainer">
        <% books.forEach(function(b){ %>
            <div class="book-items">
                <div class="column">
                    <img class="pic" src="<%= b.bookImage %>" alt="">
                    <br>
                    <p>
                        <%= b.title %>
                    </p>
                    <p>by <%= b.author %>
                    </p>
                    <a href="/books/<%= b.id%>"> >> details</a>
                    <div class="oneLine">
                        <button><a href="/books/edit/<%=b.id%>">Edit</a></button>
                        <form action="/books/<%=b.id%>?_method=DELETE" method="post"><button
                                type="submit">Delete</button>
                        </form>
                    </div>

                </div>

            </div>
            <% }) %>
                <p>
                    <%= errorMsg %>
                </p>
    </div>
    <%- include('../partials/footer') %>