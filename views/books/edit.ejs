<%- include('../partials/header') %>
    <div class="mainContainer">
        <div class="formContainer">
            <form action="/books/<%= book.id %>?_method=PUT" method="POST">
                <div class="column">
                    <img class="pic" src="<%= book.bookImage %>" alt="">
                </div>
                <br>
                <div class="form-row ">
                    <label for="title">Title:</label><input type="text" name="title" value="<%= book.title %>">
                </div>
                <div class="form-row ">
                    <label for="author">Author:</label><input type="text" name="author" value="<%= book.author %>">
                </div>
                <div class="form-row ">
                    <label for="publishDate">Publish Date:</label><input name="publishDate"
                        value="<%= book.publishDate.toLocaleDateString() %>">
                </div>
                <div class="form-row ">
                    <label for="publisher">Publisher:</label><input type="text" name="publisher"
                        value="<%= book.publisher %>">
                </div>
                <div class="form-row ">
                    <label for="pages">Pages:</label><input type="number" name="pages" value="<%= book.pages %>">
                </div>
                <div class="form-row ">
                    <label for="language">Language:</label><input type="text" name="language"
                        value="<%= book.language %>">
                </div>
                <div class="form-row ">
                    <label for="description">Description:</label><textarea
                        name="description"><%= book.description %></textarea>
                </div>
                <button type="submit">Submit</button>

            </form>


            <p>
                <%= errorMsg %>
            </p>
        </div>
    </div>
    <%- include('../partials/footer') %>